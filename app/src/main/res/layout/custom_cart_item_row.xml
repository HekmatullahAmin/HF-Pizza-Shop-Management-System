<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/customCartItemRowItemImageViewId"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/customCartItemRowDetailsLinearLayoutId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/customCartItemRowItemImageViewId"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/customCartItemRowNameTextViewId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Margherita"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/customCartItemRowDescriptionTextViewId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Classic delight with 100% real mozzarella cheese"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/customCartItemRowItemAmountAndPriceLinearLayoutId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/customCartItemRowMinusImageViewId"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/minus"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/customCartItemRowAmountOfItemTextViewId"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/customCartItemRowPlusImageViewId"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/plus"
                        android:padding="5dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/customCartItemRowItemPriceTextViewId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="198"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>