<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.OrderHistoryActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/orderHistoryActivityRecyclerViewId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" />

    <LinearLayout
        android:id="@+id/orderHistoryActivityEmptyFavouriteMainLinearLayoutId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/orderHistoryActivityCartIsEmptyTextViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_history_activity_is_empty_text_view"
            android:textSize="20sp" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/orderHistoryActivityEmptyOrderImageViewId"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/favouriteActivityCartIsEmptyTextViewId"
            android:layout_marginTop="20dp"
            android:src="@drawable/order"
            app:civ_border_color="@color/black"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/orderHistoryActivityGetSomeOrderTextViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/favouriteActivityEmptyBagImageViewId"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/order_history_activity_order_some_items_text_view"
            android:textSize="10sp" />
    </LinearLayout>
</RelativeLayout>