<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/customExploreMenuItemImageViewId"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/customExploreMenuItemPriceTextViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/customExploreMenuItemImageViewId"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="100"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/customExploreMenuItemIsFavouriteImageViewId"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignRight="@id/customExploreMenuItemImageViewId"
            android:layout_margin="10dp"
            android:src="@drawable/heart_unselected" />

        <LinearLayout
            android:id="@+id/customExploreMenuItemMainLinearLayoutId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/customExploreMenuItemImageViewId"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/customExploreMenuNameAndDescriptionLinearLayoutId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/customExploreMenuItemNameTextViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pizza"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/customExploreMenuItemDescriptionTextViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Freshly Baked Stuffed Garlic Bread with Cheese, Onion and Paneer Tikka fillings."
                    android:textSize="15sp" />
            </LinearLayout>

            <Button
                android:id="@+id/customExploreMenuItemAddToCartButtonId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="Add to cart"
                android:textSize="15sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/customExploreMenuItemAddedItemTextViewId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_item_added_background"
                android:gravity="center"
                android:padding="5dp"
                android:text="Added"
                android:textColor="@color/design_default_color_on_primary"
                android:textSize="15sp"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>