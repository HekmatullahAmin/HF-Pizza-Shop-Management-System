<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/orange_200"
    android:gravity="center"
    android:paddingLeft="10dp"
    android:paddingTop="40dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/navigationDrawerLogoImageViewId"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/logo" />

    <LinearLayout
        android:id="@+id/navigationDrawerLinearLayoutId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/navigationDrawerLogoImageViewId"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/navigationDrawerNameTextViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="H n F"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/navigationDrawerSloganTextViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Best In Town"
            android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>