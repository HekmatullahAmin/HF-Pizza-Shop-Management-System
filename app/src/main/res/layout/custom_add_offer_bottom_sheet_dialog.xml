<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/customAddOfferBottomSheetDialogOfferNameTextInputLayoutId"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconMode="clear_text">

        <EditText
            android:id="@+id/customAddOfferBottomSheetDialogOfferNameEditTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter offer"
            android:textSize="20sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/customAddOfferBottomSheetDialogOfferDescriptionTextInputLayoutId"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/customAddOfferBottomSheetDialogOfferNameTextInputLayoutId"
        android:layout_marginTop="5dp"
        app:endIconMode="clear_text">

        <EditText
            android:id="@+id/customAddOfferBottomSheetDialogOfferDescriptionEditTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter description"
            android:textSize="20sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/customAddOfferBottomSheetDialogOfferAmountTextInputLayoutId"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/customAddOfferBottomSheetDialogOfferDescriptionTextInputLayoutId"
        android:layout_marginTop="5dp"
        app:endIconMode="clear_text">

        <EditText
            android:id="@+id/customAddOfferBottomSheetDialogOfferAmountEditTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Amount"
            android:inputType="numberDecimal"
            android:textSize="20sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/customAddOfferBottomSheetDialogSaveOfferButtonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/customAddOfferBottomSheetDialogOfferAmountTextInputLayoutId"
        android:padding="10dp"
        android:text="Save"
        android:textSize="20sp" />
</RelativeLayout>